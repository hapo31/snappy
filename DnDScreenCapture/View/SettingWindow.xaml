<Window x:Class="DnDScreenCapture.View.SettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DnDScreenCapture.View"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="SettingWindow" Height="291.765" Width="250">
    <Grid>
        <Button Content="認証する" Margin="10,10,10,0" VerticalAlignment="Top" Height="49" Click="Button_Click"/>
        <Border BorderBrush="Black" BorderThickness="1" Margin="10,64,10,10">
            <Grid>
                <Label Content="認証情報" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,9,0,0" Width="72"/>
                <Image Source="{Binding IconPath}"  Margin="5,35,145,10"/>
                <Label Content="{Binding ScreenName}" Margin="77,35,5,88"/>
                <Label Content="{Binding ShowName}"  Margin="77,104,5,10"/>
            </Grid>
        </Border>
    </Grid>
</Window>
